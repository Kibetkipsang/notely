{
  "compilerOptions": {
    // File Layout
    "rootDir": "./src",
    "outDir": "./dist",

    // Environment Settings
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "types": ["node"],
    
    // Module resolution
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    
    // Output settings
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    
    // Strict TypeScript settings
    "strict": true,
    
    // Remove or disable these for Node.js backend:
    "verbatimModuleSyntax": false,  // Disable for CommonJS
    "isolatedModules": false,       // Not needed for Node.js
    "noUncheckedSideEffectImports": false,
    "moduleDetection": "auto",
    
    // Remove React-specific settings:
    // "jsx": "react-jsx",  // REMOVE THIS LINE - No JSX in backend
    
    // Enable emitting files (backend needs compiled JS)
    "noEmit": false,
    
    // Style Options
    "noImplicitReturns": true,
    "noImplicitOverride": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    
    // Other recommended options
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    
    // Remove frontend-specific options:
    // "allowImportingTsExtensions": true, // Not needed for Node.js
    "allowImportingTsExtensions": false,
    
    // Additional Node.js optimizations
    "removeComments": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    
    // Path mapping (optional)
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@config/*": ["src/config/*"],
      "@controllers/*": ["src/controllers/*"],
      "@middleware/*": ["src/middleware/*"],
      "@routes/*": ["src/routes/*"],
      "@services/*": ["src/services/*"],
      "@types/*": ["src/types/*"],
      "@utils/*": ["src/utils/*"]
    }
  },
  
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts"
  ],
  
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.ts",
    "**/*.spec.ts"
  ],
  
  // Reference other tsconfig files if needed
  "references": []
}