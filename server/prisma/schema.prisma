generator client {
  provider = "prisma-client-js"
  // output   = "../generated/prisma"
}

datasource db {
  provider = "sqlserver"
  url      = env("DATABASE_URL")
}

model User {
  id           String   @id @default(uuid()) @db.UniqueIdentifier
  firstName    String   @db.VarChar(100)
  lastName     String   @db.VarChar(100)
  userName     String?  @unique @db.VarChar(50)
  emailAddress String   @unique @db.VarChar(255)
  password String   @map("password") @db.VarChar(255) 
  avatarUrl    String?  @db.NVarChar(Max)
  createdAt    DateTime @default(now()) @db.DateTimeOffset
  updatedAt    DateTime @default(now()) @db.DateTimeOffset
  
  // password reset functionality
  passwordResetToken      String?   @map("password_reset_token") @db.VarChar(255)
  passwordResetExpires    DateTime? @map("password_reset_expires") @db.DateTimeOffset
  
  // email verification
  emailVerified           Boolean   @default(false) @map("email_verified")
  emailVerificationToken  String?   @map("email_verification_token") @db.VarChar(255)
  emailVerificationExpires DateTime? @map("email_verification_expires") @db.DateTimeOffset
  
  // Track last password change for security
  lastPasswordChange      DateTime  @default(now()) @map("last_password_change") @db.DateTimeOffset
  
  // Relations
  notes Note[]
  settings UserSettings?
  activities Activity[] // Add this
  
  @@map("Users")
  @@index([emailAddress])
  @@index([userName])
  @@index([lastName, firstName])
  @@index([passwordResetToken])
  @@index([emailVerificationToken])
}

model Note {
  id        String   @id @default(uuid()) @db.UniqueIdentifier
  title     String   @db.NVarChar(255)
  content   String   @db.NVarChar(Max)
  synopsis  String?  @db.NVarChar(500) 
  
  // Add pin and favorite functionality
  isPinned   Boolean  @default(false) @map("is_pinned")
  isFavorite Boolean  @default(false) @map("is_favorite")
  
  // Track when note was pinned/favorited for activity tracking
  pinnedAt    DateTime? @map("pinned_at") @db.DateTimeOffset
  favoritedAt DateTime? @map("favorited_at") @db.DateTimeOffset
  
  isDeleted Boolean  @default(false) @map("is_deleted")
  deletedAt DateTime? @map("deleted_at") @db.DateTimeOffset
  createdAt DateTime @default(now()) @map("created_at") @db.DateTimeOffset
  updatedAt DateTime @default(now()) @map("updated_at") @db.DateTimeOffset
  
  userId   String   @map("user_id") @db.UniqueIdentifier
  user     User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@map("Notes")
  @@index([userId])
  @@index([isDeleted, deletedAt])
  @@index([isPinned])
  @@index([isFavorite])
  @@index([isPinned, isFavorite])
  @@index([updatedAt])
  @@index([pinnedAt])
  @@index([favoritedAt])
}

model UserSettings {
  id                 String   @id @default(uuid()) @db.UniqueIdentifier
  emailNotifications Boolean  @default(true) @map("email_notifications")
  darkMode           Boolean  @default(false) @map("dark_mode")
  language           String   @default("en") @db.VarChar(10)
  timezone           String   @default("UTC") @db.VarChar(50)
  
  // For future notifications customization
  pushNotifications  Boolean  @default(true) @map("push_notifications")
  soundEnabled       Boolean  @default(true) @map("sound_enabled")
  
  userId             String   @unique @map("user_id") @db.UniqueIdentifier
  user               User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  createdAt          DateTime @default(now()) @map("created_at") @db.DateTimeOffset
  updatedAt          DateTime @default(now()) @map("updated_at") @db.DateTimeOffset
  
  @@map("UserSettings")
  @@index([userId])
}

// Add this Activity model for tracking user activities and notifications
model Activity {
  id          String   @id @default(uuid()) @db.UniqueIdentifier
  userId      String   @map("user_id") @db.UniqueIdentifier
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  // Activity type
  type        String   @db.VarChar(50)  // 'note_created', 'note_updated', 'note_pinned', 'note_favorited', 'note_deleted', 'note_restored', 'system'
  action      String   @db.VarChar(50)  // 'created', 'updated', 'pinned', 'unpinned', 'favorited', 'unfavorited', 'deleted', 'restored'
  
  // Target of the activity
  targetType  String   @db.VarChar(50)  // 'note', 'user', 'system'
  targetId    String?  @db.VarChar(255) // ID of the note/user
  
  // Display information
  title       String   @db.NVarChar(255)
  message     String?  @db.NVarChar(500)
  data        String?  @db.NVarChar(Max) // JSON for additional data (like note content preview)
  
  // Status and metadata
  read        Boolean  @default(false)
  createdAt   DateTime @default(now()) @map("created_at") @db.DateTimeOffset
  updatedAt   DateTime @updatedAt @map("updated_at") @db.DateTimeOffset
  readAt      DateTime? @map("read_at") @db.DateTimeOffset
  
  @@map("Activities")
  @@index([userId])
  @@index([userId, read])
  @@index([userId, createdAt])
  @@index([type])
  @@index([targetType, targetId])
}